@model Product

@{
    string mainImageUrl = Model.Images.FirstOrDefault(i => i.IsMainImage)?.ImageUrl + "200x200" ?? "";
}

<div class="card style=width: 18rem;">
    <img class="card-img-top" src="@mainImageUrl" />
    <div class="card-body">
        <div class="card-body">
            <a asp-action="Detail" asp-controller="Home" asp-route-productId="@Model.Id" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">
                    @Model.Price.ToString("c")
                </p>
            </a>
        </div>

    </div>

