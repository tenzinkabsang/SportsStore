@model Product

@{
    string mainImageUrl = Model.Images.FirstOrDefault(i => i.IsMainImage)?.ImageUrl + "200x200" ?? "";
}

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">

            <img src="@mainImageUrl" alt="@Model.Name" />
            <h4>
                @Model.Name
                <span class="badge rounded-pill bg-primary text-white" style="float:right">
                    <small>@Model.Price.ToString("c")</small>
                </span>
            </h4>
        </a>
    </div>

    <form id="@Model.Id" asp-page="/Cart" method="post">
        <input type="hidden" name="productId" value="@Model.Id" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Description
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>
</div>